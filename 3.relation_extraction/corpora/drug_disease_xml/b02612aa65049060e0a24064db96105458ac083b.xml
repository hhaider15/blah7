  <chunk id="b02612aa65049060e0a24064db96105458ac083b.c0" text="IFITMs from Mycobacteria Confer Resistance to Influenza Virus When Expressed in Human Cells">
    <entity charOffset="46-55" id="b02612aa65049060e0a24064db96105458ac083b.c0.e0" ontology_id="DOID_8469" text="Influenza" type="disease"/>

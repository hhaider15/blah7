  <chunk id="5e1989bee9ae95c79dea0e12d9f455cb1d2b61d5.c0" text="Critical COPD respiratory illness is linked to increased transcriptomic activity of neutrophil proteases genes">
    <entity charOffset="9-13" id="5e1989bee9ae95c79dea0e12d9f455cb1d2b61d5.c0.e0" ontology_id="DOID_3083" text="COPD" type="disease"/>

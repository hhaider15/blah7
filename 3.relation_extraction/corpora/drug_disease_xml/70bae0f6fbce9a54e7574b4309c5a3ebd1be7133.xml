  <chunk id="70bae0f6fbce9a54e7574b4309c5a3ebd1be7133.c0" text="Kinetic characterization of trans- proteolytic activity of Chikungunya virus capsid protease and development of a FRET-based HTS assay">
    <entity charOffset="59-70" id="70bae0f6fbce9a54e7574b4309c5a3ebd1be7133.c0.e0" ontology_id="DOID_0050012" text="Chikungunya" type="disease"/>
    <entity charOffset="125-128" id="70bae0f6fbce9a54e7574b4309c5a3ebd1be7133.c0.e1" ontology_id="DOID_0110698" text="HTS" type="disease"/>

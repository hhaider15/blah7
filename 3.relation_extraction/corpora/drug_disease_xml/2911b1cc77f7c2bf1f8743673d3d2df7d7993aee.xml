  <chunk id="2911b1cc77f7c2bf1f8743673d3d2df7d7993aee.c0" text="The Functional Roles of the Cis-acting Elements in Bamboo mosaic virus RNA Genome">
    <entity charOffset="39-47" id="2911b1cc77f7c2bf1f8743673d3d2df7d7993aee.c0.e0" ontology_id="CHEBI_33250" text="Elements" type="chemical"/>
    <entity charOffset="71-74" id="2911b1cc77f7c2bf1f8743673d3d2df7d7993aee.c0.e1" ontology_id="CHEBI_33697" text="RNA" type="chemical"/>

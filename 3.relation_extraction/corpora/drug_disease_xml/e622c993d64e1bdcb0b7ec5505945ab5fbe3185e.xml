  <chunk id="e622c993d64e1bdcb0b7ec5505945ab5fbe3185e.c0" text="Remote Activation of Host Cell DNA Synthesis in Uninfected Cells Signaled by Infected Cells in Advance of Virus Transmission">
    <entity charOffset="31-34" id="e622c993d64e1bdcb0b7ec5505945ab5fbe3185e.c0.e0" ontology_id="CHEBI_16991" text="DNA" type="chemical"/>

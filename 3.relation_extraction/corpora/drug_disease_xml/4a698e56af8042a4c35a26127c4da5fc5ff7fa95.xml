  <chunk id="4a698e56af8042a4c35a26127c4da5fc5ff7fa95.c0" text="Long non-coding RNA BST2/BISPR is induced by IFN and regulates the expression of the antiviral factor tetherin">
    <entity charOffset="16-19" id="4a698e56af8042a4c35a26127c4da5fc5ff7fa95.c0.e0" ontology_id="CHEBI_33697" text="RNA" type="chemical"/>

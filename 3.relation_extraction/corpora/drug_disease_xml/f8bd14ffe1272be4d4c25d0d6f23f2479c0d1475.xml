  <chunk id="f8bd14ffe1272be4d4c25d0d6f23f2479c0d1475.c0" text="Inhibition of RNA Recruitment and Replication of an RNA Virus by Acridine Derivatives with Known Anti-Prion Activities">
    <entity charOffset="14-17" id="f8bd14ffe1272be4d4c25d0d6f23f2479c0d1475.c0.e0" ontology_id="CHEBI_33697" text="RNA" type="chemical"/>

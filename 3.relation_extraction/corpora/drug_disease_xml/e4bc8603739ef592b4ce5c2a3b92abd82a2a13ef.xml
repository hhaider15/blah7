  <chunk id="e4bc8603739ef592b4ce5c2a3b92abd82a2a13ef.c0" text="Preparation and Antibacterial Activity Evaluation of 18-β-glycyrrhetinic Acid Loaded PLGA Nanoparticles">
    <entity charOffset="73-77" id="e4bc8603739ef592b4ce5c2a3b92abd82a2a13ef.c0.e0" ontology_id="CHEBI_37527" text="Acid" type="chemical"/>

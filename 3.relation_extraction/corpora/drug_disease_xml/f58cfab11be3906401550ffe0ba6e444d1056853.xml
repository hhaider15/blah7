  <chunk id="f58cfab11be3906401550ffe0ba6e444d1056853.c0" text="Human Enterovirus Nonstructural Protein 2C ATPase Functions as Both an RNA Helicase and ATP-Independent RNA Chaperone">
    <entity charOffset="32-39" id="f58cfab11be3906401550ffe0ba6e444d1056853.c0.e0" ontology_id="CHEBI_16541" text="Protein" type="chemical"/>

  <chunk id="2bce7709e22e3d5a110cb77501f6d97db10d9c05.c0" text="Spray dried plasma as an alternative to antibiotics in piglet feeds, mode of action and biosafety">
    <entity charOffset="40-51" id="2bce7709e22e3d5a110cb77501f6d97db10d9c05.c0.e0" ontology_id="CHEBI_33281" text="antibiotics" type="chemical"/>
    <entity charOffset="77-83" id="2bce7709e22e3d5a110cb77501f6d97db10d9c05.c0.e1" ontology_id="CHEBI_5133" text="action" type="chemical"/>

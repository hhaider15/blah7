  <chunk id="1713f0cf6cf8f5e4134cb4b78d5ab4d2c3cc8791.c0" text="Case Report Herpes Simplex Virus Hepatitis in an Immunocompetent Adult: A Fatal Outcome due to Liver Failure">
    <entity charOffset="12-26" id="1713f0cf6cf8f5e4134cb4b78d5ab4d2c3cc8791.c0.e0" ontology_id="DOID_8566" text="Herpes Simplex" type="disease"/>
    <entity charOffset="33-42" id="1713f0cf6cf8f5e4134cb4b78d5ab4d2c3cc8791.c0.e1" ontology_id="DOID_2237" text="Hepatitis" type="disease"/>

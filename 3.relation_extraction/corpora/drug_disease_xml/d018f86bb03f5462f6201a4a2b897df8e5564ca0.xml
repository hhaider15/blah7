  <chunk id="d018f86bb03f5462f6201a4a2b897df8e5564ca0.c0" text="Pulmonary vascular dysfunction in ARDS">
    <entity charOffset="34-38" id="d018f86bb03f5462f6201a4a2b897df8e5564ca0.c0.e0" ontology_id="DOID_11394" text="ARDS" type="disease"/>

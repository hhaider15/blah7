  <chunk id="88249503fb8dd13282a60ceac441edd59e1c5be3.c0" text="Glucocorticosteroid in Treatment of Severe Pneumonia">
    <entity charOffset="43-52" id="88249503fb8dd13282a60ceac441edd59e1c5be3.c0.e0" ontology_id="DOID_552" text="Pneumonia" type="disease"/>

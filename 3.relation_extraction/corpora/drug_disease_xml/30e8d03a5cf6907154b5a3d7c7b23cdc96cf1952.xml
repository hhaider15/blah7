    <entity charOffset="307-320" id="30e8d03a5cf6907154b5a3d7c7b23cdc96cf1952.c2.e2" ontology_id="CHEBI_27680" text="galactomannan" type="chemical"/>
    <pair e1="30e8d03a5cf6907154b5a3d7c7b23cdc96cf1952.c2.e0" e2="30e8d03a5cf6907154b5a3d7c7b23cdc96cf1952.c2.e2" id="30e8d03a5cf6907154b5a3d7c7b23cdc96cf1952.c2.p0" relation="true"/>

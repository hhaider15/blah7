  <chunk id="d17a83f05547d542975169b6d43912eae3afd17b.c0" text="ARTICLE Structural analysis of herpes simplex virus by optical super-resolution imaging">
    <entity charOffset="31-45" id="d17a83f05547d542975169b6d43912eae3afd17b.c0.e0" ontology_id="DOID_8566" text="herpes simplex" type="disease"/>

  <chunk id="3656fed9d1f687fd87440d7da4f3d852aa1dcdc4.c0" text="Development of broad-spectrum human monoclonal antibodies for rabies post-exposure prophylaxis">
    <entity charOffset="62-68" id="3656fed9d1f687fd87440d7da4f3d852aa1dcdc4.c0.e0" ontology_id="DOID_11260" text="rabies" type="disease"/>

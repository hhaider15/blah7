  <chunk id="4f4a156d0bc65afd5d8f5b80b4bb8436a590955a.c0" text="Spectrum of pathogen-and model-specific histopathologies in mouse models of acute pneumonia">
    <entity charOffset="76-91" id="4f4a156d0bc65afd5d8f5b80b4bb8436a590955a.c0.e0" ontology_id="DOID_552" text="acute pneumonia" type="disease"/>
    <entity charOffset="82-91" id="4f4a156d0bc65afd5d8f5b80b4bb8436a590955a.c0.e1" ontology_id="DOID_552" text="pneumonia" type="disease"/>

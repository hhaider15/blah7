  <chunk id="b894fde1276ea66d0eef9ecf55b025adc58f105d.c0" text="Broad-spectrum antiviral agents: secreted phospholipase A 2 targets viral envelope lipid bilayers derived from the endoplasmic reticulum membrane OPEN">
    <entity charOffset="15-24" id="b894fde1276ea66d0eef9ecf55b025adc58f105d.c0.e0" ontology_id="CHEBI_22587" text="antiviral" type="chemical"/>

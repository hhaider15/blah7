  <chunk id="0c161375d1b822a44e873c134760ddb8600a550c.c0" text="The Curious Case of the Nidovirus Exoribonuclease: Its Role in RNA Synthesis and Replication Fidelity">
    <entity charOffset="55-59" id="0c161375d1b822a44e873c134760ddb8600a550c.c0.e0" ontology_id="CHEBI_50906" text="Role" type="chemical"/>
    <entity charOffset="63-66" id="0c161375d1b822a44e873c134760ddb8600a550c.c0.e1" ontology_id="CHEBI_33697" text="RNA" type="chemical"/>

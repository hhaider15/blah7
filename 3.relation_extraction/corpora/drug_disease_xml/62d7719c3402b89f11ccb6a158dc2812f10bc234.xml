  <chunk id="62d7719c3402b89f11ccb6a158dc2812f10bc234.c0" text="Depletion of Alveolar Macrophages Ameliorates Virus- Induced Disease following a Pulmonary Coronavirus Infection">
    <entity charOffset="61-68" id="62d7719c3402b89f11ccb6a158dc2812f10bc234.c0.e0" ontology_id="DOID_4" text="Disease" type="disease"/>

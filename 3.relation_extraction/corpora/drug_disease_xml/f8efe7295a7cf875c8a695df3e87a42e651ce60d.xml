  <chunk id="f8efe7295a7cf875c8a695df3e87a42e651ce60d.c0" text="Health care workers indicate ill preparedness for Ebola Virus Disease outbreak in Ashanti Region of Ghana">
    <entity charOffset="50-69" id="f8efe7295a7cf875c8a695df3e87a42e651ce60d.c0.e0" ontology_id="DOID_4325" text="Ebola Virus Disease" type="disease"/>
    <entity charOffset="62-69" id="f8efe7295a7cf875c8a695df3e87a42e651ce60d.c0.e1" ontology_id="DOID_4" text="Disease" type="disease"/>

  <chunk id="a0d73d877a6bcede67ac884d7e5ada5dd3eb810c.c0" text="The Immunosuppressive Agent Mizoribine Monophosphate Is an Inhibitor of the Human RNA Capping Enzyme">
    <entity charOffset="4-27" id="a0d73d877a6bcede67ac884d7e5ada5dd3eb810c.c0.e0" ontology_id="CHEBI_35705" text="Immunosuppressive Agent" type="chemical"/>

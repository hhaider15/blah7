    <entity charOffset="278-282" id="c848bce30b9e60bccfd15a5534af1d0cea54c686.c1.e2" ontology_id="DOID_11394" text="ARDS" type="disease"/>
  </chunk>
  <chunk id="c848bce30b9e60bccfd15a5534af1d0cea54c686.c2" text="Objectives: This study examined risk factors and biomarkers for ARDS development and mortality in two prospective cohort studies.">
    <entity charOffset="64-68" id="c848bce30b9e60bccfd15a5534af1d0cea54c686.c2.e0" ontology_id="DOID_11394" text="ARDS" type="disease"/>

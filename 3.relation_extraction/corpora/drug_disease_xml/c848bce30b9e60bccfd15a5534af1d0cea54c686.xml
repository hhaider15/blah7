  <chunk id="c848bce30b9e60bccfd15a5534af1d0cea54c686.c0" text="Thrombocytopenia Is Associated with Acute Respiratory Distress Syndrome Mortality: An International Study">
    <entity charOffset="0-16" id="c848bce30b9e60bccfd15a5534af1d0cea54c686.c0.e0" ontology_id="DOID_1588" text="Thrombocytopenia" type="disease"/>
    <entity charOffset="63-71" id="c848bce30b9e60bccfd15a5534af1d0cea54c686.c0.e1" ontology_id="DOID_225" text="Syndrome" type="disease"/>

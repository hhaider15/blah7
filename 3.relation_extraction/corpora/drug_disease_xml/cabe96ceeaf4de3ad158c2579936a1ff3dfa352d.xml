  <chunk id="cabe96ceeaf4de3ad158c2579936a1ff3dfa352d.c0" text="Ligand Clouds around Protein Clouds: A Scenario of Ligand Binding with Intrinsically Disordered Proteins">
    <entity charOffset="0-6" id="cabe96ceeaf4de3ad158c2579936a1ff3dfa352d.c0.e0" ontology_id="CHEBI_52214" text="Ligand" type="chemical"/>

  <chunk id="00951716e01c8e0cc341770389fc38d1b5455210.c0" text="Knowledge of, attitudes toward, and preventive practices relating to cholera and oral cholera vaccine among urban high-risk groups: findings of a cross-sectional study in Dhaka, Bangladesh">
    <entity charOffset="69-76" id="00951716e01c8e0cc341770389fc38d1b5455210.c0.e0" ontology_id="DOID_1498" text="cholera" type="disease"/>
    <entity charOffset="86-93" id="00951716e01c8e0cc341770389fc38d1b5455210.c0.e1" ontology_id="DOID_1498" text="cholera" type="disease"/>

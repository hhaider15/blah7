  <chunk id="33542ce3cc964e6621e0ce35fedd41b34367de76.c0" text="Histone Deacetylases in Herpesvirus Replication and Virus-Stimulated Host Defense">
    <entity charOffset="0-7" id="33542ce3cc964e6621e0ce35fedd41b34367de76.c0.e0" ontology_id="CHEBI_15358" text="Histone" type="chemical"/>

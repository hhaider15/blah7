  <chunk id="788295abb7003fc90fdadb54283b664724c83b33.c0" text="The Conserved Coronavirus Macrodomain Promotes Virulence and Suppresses the Innate Immune Response during Severe Acute Respiratory Syndrome Coronavirus Infection">
    <entity charOffset="106-139" id="788295abb7003fc90fdadb54283b664724c83b33.c0.e0" ontology_id="DOID_2945" text="Severe Acute Respiratory Syndrome" type="disease"/>

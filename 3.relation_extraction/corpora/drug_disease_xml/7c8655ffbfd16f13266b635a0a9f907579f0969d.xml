  <chunk id="7c8655ffbfd16f13266b635a0a9f907579f0969d.c0" text="Resveratrol attenuates cortical neuron activity: roles of large conductance calcium-activated potassium channels and voltage-gated sodium channels">
    <entity charOffset="0-11" id="7c8655ffbfd16f13266b635a0a9f907579f0969d.c0.e0" ontology_id="CHEBI_27881" text="Resveratrol" type="chemical"/>

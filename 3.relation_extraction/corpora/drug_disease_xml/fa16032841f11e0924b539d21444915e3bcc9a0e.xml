  <chunk id="fa16032841f11e0924b539d21444915e3bcc9a0e.c0" text="A Nucleic-Acid Hydrolyzing Single Chain Antibody Confers Resistance to DNA Virus Infection in HeLa Cells and C57BL/6 Mice">
    <entity charOffset="71-74" id="fa16032841f11e0924b539d21444915e3bcc9a0e.c0.e0" ontology_id="CHEBI_16991" text="DNA" type="chemical"/>

  <chunk id="e5746d8d6badecb0d0afc06192c540aed6479c83.c0" text="Identification of a Novel Non-desmoglein Autoantigen in Pemphigus Vulgaris">
    <entity charOffset="56-65" id="e5746d8d6badecb0d0afc06192c540aed6479c83.c0.e0" ontology_id="DOID_9182" text="Pemphigus" type="disease"/>
    <entity charOffset="56-74" id="e5746d8d6badecb0d0afc06192c540aed6479c83.c0.e1" ontology_id="DOID_0060851" text="Pemphigus Vulgaris" type="disease"/>

  <chunk id="15d784a335abf0ea0266e9a2406b8d87f25c8f2f.c0" text="T Cell-Derived IL-10 Impairs Host Resistance to Mycobacterium tuberculosis Infection">
    <entity charOffset="62-74" id="15d784a335abf0ea0266e9a2406b8d87f25c8f2f.c0.e0" ontology_id="DOID_399" text="tuberculosis" type="disease"/>

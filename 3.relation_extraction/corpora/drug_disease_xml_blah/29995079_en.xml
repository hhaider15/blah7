  <chunk id="29995079_en.c0" text="Prognostic factors among critically ill patients with community-acquired acute bacterial meningitis and acute kidney injury.">
    <entity charOffset="79-99" id="29995079_en.c0.e0" ontology_id="DOID_9470" text="bacterial meningitis" type="disease"/>
    <entity charOffset="89-99" id="29995079_en.c0.e1" ontology_id="DOID_9471" text="meningitis" type="disease"/>

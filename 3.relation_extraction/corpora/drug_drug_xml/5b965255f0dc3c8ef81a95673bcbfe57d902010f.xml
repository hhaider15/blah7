  <chunk id="5b965255f0dc3c8ef81a95673bcbfe57d902010f.c0" text="Clinical development of monoclonal antibody- based drugs in HIV and HCV diseases">
    <entity charOffset="51-56" id="5b965255f0dc3c8ef81a95673bcbfe57d902010f.c0.e0" ontology_id="CHEBI_23888" text="drugs" type="chemical"/>

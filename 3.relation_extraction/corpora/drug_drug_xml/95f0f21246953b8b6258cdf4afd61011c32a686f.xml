  <chunk id="95f0f21246953b8b6258cdf4afd61011c32a686f.c0" text="Niclosamide inhibits leaf blight caused by Xanthomonas oryzae in rice">
    <entity charOffset="0-11" id="95f0f21246953b8b6258cdf4afd61011c32a686f.c0.e0" ontology_id="CHEBI_7553" text="Niclosamide" type="chemical"/>

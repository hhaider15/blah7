  <chunk id="720d81cbf900cfce68db61398f8c41f92f798314.c0" text="inflammatory Responses Regulating Alveolar ion Transport during Pulmonary infections">
    <entity charOffset="43-46" id="720d81cbf900cfce68db61398f8c41f92f798314.c0.e0" ontology_id="CHEBI_24870" text="ion" type="chemical"/>

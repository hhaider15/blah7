  <chunk id="f78956e70c8bd1756ffb24ae47c35c3217bed384.c0" text="Peptide Vaccine: Progress and Challenges">
    <entity charOffset="0-7" id="f78956e70c8bd1756ffb24ae47c35c3217bed384.c0.e0" ontology_id="CHEBI_16670" text="Peptide" type="chemical"/>

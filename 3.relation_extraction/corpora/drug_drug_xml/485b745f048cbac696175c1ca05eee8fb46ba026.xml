  <chunk id="485b745f048cbac696175c1ca05eee8fb46ba026.c0" text="PI3K-Akt-mTOR axis sustains rotavirus infection via the 4E-BP1 mediated autophagy pathway and represents an antiviral target">
    <entity charOffset="82-89" id="485b745f048cbac696175c1ca05eee8fb46ba026.c0.e0" ontology_id="CHEBI_34922" text="pathway" type="chemical"/>

  <chunk id="a068f1ec98befb3d767ba602df5f314604f0aee8.c0" text="The Ebola Virus Nucleoprotein Recruits the Nuclear RNA Export Factor NXF1 into Inclusion Bodies to Facilitate Viral Protein Expression">
    <entity charOffset="51-54" id="a068f1ec98befb3d767ba602df5f314604f0aee8.c0.e0" ontology_id="CHEBI_33697" text="RNA" type="chemical"/>

  <chunk id="a0797dceb80b7f1c136590f3ba4b16da218de23f.c0" text="Intracellular human antibody fragments recognizing the VP35 protein of Zaire Ebola filovirus inhibit the protein activity">
    <entity charOffset="60-67" id="a0797dceb80b7f1c136590f3ba4b16da218de23f.c0.e0" ontology_id="CHEBI_16541" text="protein" type="chemical"/>

  <chunk id="f5080088701ed43effa979603627b2a3ad53d5aa.c0" text="Type i and Type iii interferons Display Different Dependency on Mitogen- activated Protein Kinases to Mount an antiviral state in the human gut">
    <entity charOffset="83-90" id="f5080088701ed43effa979603627b2a3ad53d5aa.c0.e0" ontology_id="CHEBI_16541" text="Protein" type="chemical"/>
    <entity charOffset="111-120" id="f5080088701ed43effa979603627b2a3ad53d5aa.c0.e1" ontology_id="CHEBI_22587" text="antiviral" type="chemical"/>
    <pair e1="f5080088701ed43effa979603627b2a3ad53d5aa.c0.e0" e2="f5080088701ed43effa979603627b2a3ad53d5aa.c0.e1" id="f5080088701ed43effa979603627b2a3ad53d5aa.c0.p0" relation="true"/>

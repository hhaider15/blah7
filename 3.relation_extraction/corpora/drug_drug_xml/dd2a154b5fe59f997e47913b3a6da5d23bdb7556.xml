  <chunk id="dd2a154b5fe59f997e47913b3a6da5d23bdb7556.c0" text="Resveratrol enhances HBV replication through activating Sirt1- PGC-1α-PPARα pathway OPEN">
    <entity charOffset="0-11" id="dd2a154b5fe59f997e47913b3a6da5d23bdb7556.c0.e0" ontology_id="CHEBI_27881" text="Resveratrol" type="chemical"/>

  <chunk id="9018234c987db8e1aec9ca3cae1806b75e4835ad.c0" text="The phosphatidylinositol-3-phosphate 5-kinase inhibitor apilimod blocks filoviral entry and infection">
    <entity charOffset="46-55" id="9018234c987db8e1aec9ca3cae1806b75e4835ad.c0.e0" ontology_id="CHEBI_35222" text="inhibitor" type="chemical"/>

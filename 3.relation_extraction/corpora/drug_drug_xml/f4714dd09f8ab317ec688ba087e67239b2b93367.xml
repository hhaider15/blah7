  <chunk id="f4714dd09f8ab317ec688ba087e67239b2b93367.c0" text="Coevolution of activating and inhibitory receptors within mammalian carcinoembryonic antigen families">
    <entity charOffset="85-92" id="f4714dd09f8ab317ec688ba087e67239b2b93367.c0.e0" ontology_id="CHEBI_59132" text="antigen" type="chemical"/>

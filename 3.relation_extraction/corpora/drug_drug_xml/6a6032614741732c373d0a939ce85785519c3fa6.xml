  <chunk id="6a6032614741732c373d0a939ce85785519c3fa6.c0" text="Recombinant Rotaviruses Rescued by Reverse Genetics Reveal the Role of NSP5 Hyperphosphorylation in the Assembly of Viral Factories GENOME REPLICATION AND REGULATION OF VIRAL GENE EXPRESSION crossm">
    <entity charOffset="63-67" id="6a6032614741732c373d0a939ce85785519c3fa6.c0.e0" ontology_id="CHEBI_50906" text="Role" type="chemical"/>

  <chunk id="384cdcda67c8a385d6a571ba5f9fb09e16d130b5.c0" text="Porcine epidemic diarrhea virus inhibits dsRNA-induced interferon-β production in porcine intestinal epithelial cells by blockade of the RIG-I-mediated pathway">
    <entity charOffset="152-159" id="384cdcda67c8a385d6a571ba5f9fb09e16d130b5.c0.e0" ontology_id="CHEBI_34922" text="pathway" type="chemical"/>

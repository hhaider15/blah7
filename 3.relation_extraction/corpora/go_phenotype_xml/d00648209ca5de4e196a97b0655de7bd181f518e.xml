  <chunk id="d00648209ca5de4e196a97b0655de7bd181f518e.c0" text="Functional role of the type 1 pilus rod structure in mediating host-pathogen interactions">
    <entity charOffset="30-35" id="d00648209ca5de4e196a97b0655de7bd181f518e.c0.e0" ontology_id="GO_0009289" text="pilus" type="gene_function"/>

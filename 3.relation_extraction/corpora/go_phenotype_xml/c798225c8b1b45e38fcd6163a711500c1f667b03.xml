  <chunk id="c798225c8b1b45e38fcd6163a711500c1f667b03.c0" text="Combined approaches of EPR and NMR illustrate only one transmembrane helix in the human IFITM3 OPEN">
    <entity charOffset="55-68" id="c798225c8b1b45e38fcd6163a711500c1f667b03.c0.e0" ontology_id="GO_0016021" text="transmembrane" type="gene_function"/>

  <chunk id="9bff285847e6573b613d937df23f57355afcbd5f.c0" text="NS2 Protein of Hepatitis C Virus Interacts with Structural and Non-Structural Proteins towards Virus Assembly">
    <entity charOffset="15-24" id="9bff285847e6573b613d937df23f57355afcbd5f.c0.e0" ontology_id="HP_0012115" text="Hepatitis" type="phenotype"/>

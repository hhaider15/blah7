    <entity charOffset="0-8" id="5a6e220c6796a02e36a272103dd39dd62c9311eb.c0.e0" ontology_id="GO_0003823" text="Antibody" type="gene_function"/>
    <entity charOffset="0-8" id="5a6e220c6796a02e36a272103dd39dd62c9311eb.c0.e1" ontology_id="GO_0042571" text="Antibody" type="gene_function"/>

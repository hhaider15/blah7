  <chunk id="b6c747316db8f591a729c4ed060a6df0e3a18fc8.c0" text="Inhaled corticosteroid use is associated with increased circulating T regulatory cells in children with asthma">
    <entity charOffset="104-110" id="b6c747316db8f591a729c4ed060a6df0e3a18fc8.c0.e0" ontology_id="HP_0002099" text="asthma" type="phenotype"/>

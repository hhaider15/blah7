  <chunk id="bd45834afc3184d92957993038c6889353797fc1.c0" text="Zika virus inhibits eIF2α-dependent stress granule assembly">
    <entity charOffset="36-50" id="bd45834afc3184d92957993038c6889353797fc1.c0.e0" ontology_id="GO_0010494" text="stress granule" type="gene_function"/>
    <entity charOffset="36-59" id="bd45834afc3184d92957993038c6889353797fc1.c0.e1" ontology_id="GO_0034063" text="stress granule assembly" type="gene_function"/>

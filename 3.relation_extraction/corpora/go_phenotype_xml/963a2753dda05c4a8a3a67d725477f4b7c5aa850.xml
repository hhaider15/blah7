  <chunk id="963a2753dda05c4a8a3a67d725477f4b7c5aa850.c0" text="A reach-out system for video microscopy analysis of ciliary motions aiding PCD diagnosis A reach-out system for video microscopy analysis of ciliary motions aiding PCD diagnosis">
    <entity charOffset="75-78" id="963a2753dda05c4a8a3a67d725477f4b7c5aa850.c0.e0" ontology_id="GO_0012501" text="PCD" type="gene_function"/>

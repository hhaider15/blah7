  <chunk id="db7ddc7b6e1689aed55b17716e2c2d3309b56f90.c0" text="The role of respiratory viruses in the etiology of bacterial pneumonia An ecological perspective">
    <entity charOffset="61-70" id="db7ddc7b6e1689aed55b17716e2c2d3309b56f90.c0.e0" ontology_id="HP_0002090" text="pneumonia" type="phenotype"/>

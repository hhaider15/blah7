  <chunk id="1f534cb2b4a2d3482affcb6d7a1dd23be34f9321.c0" text="PER1 prevents excessive innate immune response during endotoxin-induced liver injury through regulation of macrophage recruitment in mice">
    <entity charOffset="24-46" id="1f534cb2b4a2d3482affcb6d7a1dd23be34f9321.c0.e0" ontology_id="GO_0045087" text="innate immune response" type="gene_function"/>
    <entity charOffset="31-46" id="1f534cb2b4a2d3482affcb6d7a1dd23be34f9321.c0.e1" ontology_id="GO_0006955" text="immune response" type="gene_function"/>

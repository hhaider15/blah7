  <chunk id="1c995ac4ae70bbcc5da53211e20df4398d1ce55d.c0" text="Autophagic response in the Rabbit Hemorrhagic Disease, an animal model of virally-induced fulminant hepatic failure">
    <entity charOffset="90-115" id="1c995ac4ae70bbcc5da53211e20df4398d1ce55d.c0.e0" ontology_id="HP_0004448" text="fulminant hepatic failure" type="phenotype"/>
    <entity charOffset="100-115" id="1c995ac4ae70bbcc5da53211e20df4398d1ce55d.c0.e1" ontology_id="HP_0001399" text="hepatic failure" type="phenotype"/>

  <chunk id="9c39ab56559377e3b362be55e8e989e059a01fb0.c0" text="Activation of the Canonical Bone Morphogenetic Protein (BMP) Pathway during Lung Morphogenesis and Adult Lung Tissue Repair">
    <entity charOffset="76-94" id="9c39ab56559377e3b362be55e8e989e059a01fb0.c0.e0" ontology_id="GO_0060425" text="Lung Morphogenesis" type="gene_function"/>
    <entity charOffset="81-94" id="9c39ab56559377e3b362be55e8e989e059a01fb0.c0.e1" ontology_id="GO_0009653" text="Morphogenesis" type="gene_function"/>

  <chunk id="376c6616538eb3ae465dbf8ebe62c99193ba5e42.c0" text="Screening of an FDA-Approved Drug Library with a Two-Tier System Identifies an Entry Inhibitor of Severe Fever with Thrombocytopenia Syndrome Virus">
    <entity charOffset="98-104" id="376c6616538eb3ae465dbf8ebe62c99193ba5e42.c0.e0" ontology_id="HP_0012828" text="Severe" type="phenotype"/>

  <chunk id="ab54f13666ed771c15684d73ff6bcc7c92b8ae05.c0" text="Validity of the Common Cold Questionnaire (CCQ) in Asthma Exacerbations">
    <entity charOffset="51-57" id="ab54f13666ed771c15684d73ff6bcc7c92b8ae05.c0.e0" ontology_id="HP_0002099" text="Asthma" type="phenotype"/>

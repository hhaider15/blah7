  <chunk id="bbc89603600968ee09dd4b38c91616f83f7e0bba.c0" text="West Nile Virus Infection Causes Endocytosis of a Specific Subset of Tight Junction Membrane Proteins">
    <entity charOffset="33-44" id="bbc89603600968ee09dd4b38c91616f83f7e0bba.c0.e0" ontology_id="GO_0006897" text="Endocytosis" type="gene_function"/>

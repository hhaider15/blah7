  <chunk id="b147a9e7654ef4257a7c45cae6606543a7864c80.c0" text="FTY720 (fingolimod) modulates the severity of viral-induced encephalomyelitis and demyelination">
    <entity charOffset="34-42" id="b147a9e7654ef4257a7c45cae6606543a7864c80.c0.e0" ontology_id="HP_0012824" text="severity" type="phenotype"/>
    <entity charOffset="82-95" id="b147a9e7654ef4257a7c45cae6606543a7864c80.c0.e1" ontology_id="HP_0011096" text="demyelination" type="phenotype"/>

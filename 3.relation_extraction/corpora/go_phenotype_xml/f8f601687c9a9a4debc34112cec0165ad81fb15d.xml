  <chunk id="f8f601687c9a9a4debc34112cec0165ad81fb15d.c0" text="Immune Response to Lactobacillus plantarum Expressing Borrelia burgdorferi OspA Is Modulated by the Lipid Modification of the Antigen">
    <entity charOffset="0-15" id="f8f601687c9a9a4debc34112cec0165ad81fb15d.c0.e0" ontology_id="GO_0006955" text="Immune Response" type="gene_function"/>

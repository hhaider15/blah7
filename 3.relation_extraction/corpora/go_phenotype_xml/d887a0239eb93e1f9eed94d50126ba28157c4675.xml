  <chunk id="d887a0239eb93e1f9eed94d50126ba28157c4675.c0" text="The impact of the interferon-lambda family on the innate and adaptive immune response to viral infections">
    <entity charOffset="61-85" id="d887a0239eb93e1f9eed94d50126ba28157c4675.c0.e0" ontology_id="GO_0002250" text="adaptive immune response" type="gene_function"/>
    <entity charOffset="70-85" id="d887a0239eb93e1f9eed94d50126ba28157c4675.c0.e1" ontology_id="GO_0006955" text="immune response" type="gene_function"/>

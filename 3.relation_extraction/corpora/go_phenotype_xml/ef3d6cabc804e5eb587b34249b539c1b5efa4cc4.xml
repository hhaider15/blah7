  <chunk id="ef3d6cabc804e5eb587b34249b539c1b5efa4cc4.c0" text="Viral and bacterial co-infection in severe pneumonia triggers innate immune responses and specifically enhances IP-10: a translational study OPEN">
    <entity charOffset="36-42" id="ef3d6cabc804e5eb587b34249b539c1b5efa4cc4.c0.e0" ontology_id="HP_0012828" text="severe" type="phenotype"/>
    <entity charOffset="43-52" id="ef3d6cabc804e5eb587b34249b539c1b5efa4cc4.c0.e1" ontology_id="HP_0002090" text="pneumonia" type="phenotype"/>
